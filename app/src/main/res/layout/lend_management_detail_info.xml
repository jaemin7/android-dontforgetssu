<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/suit_heavy"
            android:text="빌려준 "
            android:textColor="@color/apptheme"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기록 관리"
            android:fontFamily="@font/suit_heavy"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="#E8E8E8"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:background="@drawable/detail_info_design">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="세부 사항"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"
                        android:textSize="20dp"
                        android:textColor="@color/black"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/white_box"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.5"
                            android:fontFamily="@font/suit_extrabold"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="빌린 사람"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/lend_management_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="이름 입니담."
                            android:textSize="18dp"
                            android:textColor="@color/hint_gray"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/white_box"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.5"
                            android:fontFamily="@font/suit_extrabold"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="한국 금액"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/lend_management_money"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="금액 입니담."
                            android:textColor="@color/hint_gray"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lend_management_country_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/white_box"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="3.5">

                            <TextView
                                android:id="@+id/lend_management_country"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/suit_extrabold"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="빌린나라"
                                android:textSize="20dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/suit_extrabold"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text=" 금액"
                                android:textSize="20dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="5">

                        <TextView
                            android:id="@+id/lend_management_country_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="금액"
                            android:textColor="@color/hint_gray"
                            android:textSize="18dp" />

                            <TextView
                                android:id="@+id/lend_management_country_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="단위"
                                android:textColor="@color/hint_gray"
                                android:textSize="18dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lend_management_exchangeRate_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/white_box"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.5"
                            android:fontFamily="@font/suit_extrabold"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="계산 환율"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/lend_management_exchangeRate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="환율 입니담."
                            android:textColor="@color/hint_gray"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/white_box"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.5"
                            android:fontFamily="@font/suit_extrabold"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="빌려준 날짜"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/lend_management_lendDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="날짜 입니담."
                            android:textColor="@color/hint_gray"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/white_box"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.5"
                            android:fontFamily="@font/suit_extrabold"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="받기로 한 날짜"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/lend_management_lendAcceptDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="날짜 입니담."
                            android:textColor="@color/hint_gray"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/white_box"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.5"
                            android:fontFamily="@font/suit_extrabold"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="휴대폰 번호"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/lend_management_phoneNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="번호 입니담."
                            android:textColor="@color/hint_gray"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lend_management_interest_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/white_box"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.5"
                            android:fontFamily="@font/suit_extrabold"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="이자"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/lend_management_interest"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="이자 입니담."
                            android:textColor="@color/hint_gray"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lend_management_interest_money_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:background="@drawable/white_box"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.5"
                            android:fontFamily="@font/suit_extrabold"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="이자 금액"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/lend_management_interest_money"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="이자로 늘어난 금액."
                            android:textColor="@color/hint_gray"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/white_box"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.5"
                            android:fontFamily="@font/suit_extrabold"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="메모"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/lend_management_memo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:text="메모가 길어지면 어떻게 될까 궁금하네요."
                            android:textColor="@color/hint_gray"
                            android:textSize="18dp" />
                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="거래 완료"
                android:textSize="25dp"
                android:fontFamily="@font/suit_bold"
                android:textColor="@color/white"
                android:background="@drawable/apptheme_button"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

